@model TT.Domain.Models.NewsPost

@Html.ActionLink("Back", "ListNewsPosts", "PvPAdmin")

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back", "ListNewsPosts", "PvPAdmin")</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="containerInner listdots">
    <h1>Edit News Post</h1>

    @using (Html.BeginForm("EditNewsPostSend", "PvPAdmin", FormMethod.Post))
    {

        <label>Timestamp:</label>
        @Html.TextBoxFor(n => n.Timestamp)

        <label>Message:</label>
        @Html.TextAreaFor(n => n.Text)

        <label>Archived?</label>
        @Html.DropDownListFor(n => n.ViewState, new SelectList(
                  new List<Object>{
                      new { value = 0, text = "Hidden"  },
                      new { value = 1, text = "Live"  },
                      new { value = 2, text = "Archived"  }
                    },
                  "value",
                  "text",
                   2))

        <hr />

        @Html.HiddenFor(n => n.Id)

        <input type="submit" value="Save" />

    }

    <hr />
    <div id="date"></div>
    <div id="display"></div>
</div>



<script>

    $(document).ready(function () {
        copyToDisplay();
    });

    $("#Text").keypress(function () {
        copyToDisplay();
    });

    function copyToDisplay() {
        var content = $("#Text").val();
        $("#display").html(content);
    }

</script>

