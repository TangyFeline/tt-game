@model TT.Domain.ViewModels.PublicBroadcastViewModel

<div class="containerInner">
    <h1>Public broadcast</h1>

    @using (Html.BeginForm(MVC.PvPAdmin.SendPublicBroadcast(), FormMethod.Post))
    {
        @Html.TextAreaFor(m => m.Message, new { autofocus = true })
        <br />
        <input type="submit"  class="btn btn-chat" value="Send" />
    }
</div>