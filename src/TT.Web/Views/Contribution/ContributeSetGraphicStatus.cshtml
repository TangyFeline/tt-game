@model TT.Domain.ViewModels.ContributionStatusViewModel

@using (Html.BeginForm(MVC.Contribution.ContributeSetGraphicStatusSubmit(), FormMethod.Post))
{
    
     <p>@Html.ActionLink("Look at this author's player profile", MVC.PvP.LookAtPlayer_FromMembershipId(Model.OwnerMembershipId))</p>
    
    <p>Write down your name here, how far along the graphic is, or anything else you think important.</p>
    @Html.HiddenFor(m => m.ContributionId)
    @Html.TextAreaFor(m => m.Status)

    <input type="submit" value="Save" />
}