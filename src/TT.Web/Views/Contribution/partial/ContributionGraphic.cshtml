@model TT.Domain.Models.Contribution

@{
    if (Model.MainImageExists())
    {
        <img src="https://images.transformaniatime.com/@Model.GetImageFolderName()/@Model.ImageURL" width="200px" height="200px">
    }
    else
    {
        <span class="bad">MAIN GRAPHIC NOT FOUND</span><br>
    }

    if (Model.ThumbnailImageExists())
    {
        <img src="https://images.transformaniatime.com/@Model.GetImageFolderName()/Thumbnails/100/@Model.ImageURL">
    }
    else
    {
        <span class="bad">THUMBNAIL NOT FOUND</span>
    }
}