        @Html.ValidationMessageFor(m => m.String3)
        @Html.TextAreaFor(m => m.String3, new { @class = "pollTextArea" })

        <hr>

        <p>Leave any other thoughts you think might be relevant to this poll.</p>
        @Html.ValidationMessageFor(m => m.String4)
        @Html.TextAreaFor(m => m.String4, new { @class = "pollTextArea" })



            <input type="submit" value="Submit">
    }

</div>
