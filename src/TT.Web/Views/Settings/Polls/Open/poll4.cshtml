                      new { value = "0"  , text = "---please select a choice---"  },
                      new { value = "1"  , text = "Very open; I tell most anyone I meet"  },
                        new { value = "2"  , text = "Somewhat open; I tell friends and family"  },
                        new { value = "3"  , text = "Somewhat reserved; I tell only my closest friends and family whom I generally trust"  },
