@using TT.Domain.DTOs.RPClassifiedAds
@model IEnumerable<RPClassifiedAdDetail>

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back to game", MVC.PvP.Play())</li>
                <li>@Html.ActionLink("RP Classifieds", MVC.Info.RecentRPClassifieds())</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div>
    <p class="infoMessage result">@TempData["Result"]</p>
    <p class="infoMessage error">@TempData["Error"]</p>
    <p class="infoMessage suberror">@TempData["SubError"]</p>
</div>


<div class="containerInner">
    <h1>Your RP Classified Ads</h1>
    <p style="margin: 20px 0px; text-align: center;">Below are all of the RP Classified Ads created by you.  You can only have 3 ads open at a time so make them count!</p>

    @{
        if (Model.Count() < 3)
        {
            <p style="margin: 0px 0px 20px 0px; text-align: center;">@Html.ActionLink("New Ad", MVC.Settings.CreateRPClassifiedAd())</p>
        }

      <div class="row">
            @{
                foreach (RPClassifiedAdDetail ad in Model.OrderByDescending(m => m.RefreshTimestamp))
                {
                    <div class="col-xs-12 col-md-3 rp-ad textSpaced">

                        <p>
                            <i><b><u>@ad.Title</u></b></i>
                        </p>

                        <p><i>@ad.Text</i></p>
                        <p>
                            <span class="good">Desired themes</span><br />
                            @ad.YesThemes
                        </p>
                        <p>
                            <span class="bad">Undesired themes</span><br />
                            @ad.NoThemes
                        </p>
                        <p>
                            <span class="timeago">Availability / Timezones</span><br />
                            @ad.PreferredTimezones
                        </p>
                        <p class="timeago">
                            Created @TT.Web.CustomHtmlHelpers.CharactersHere.DatetimeToTimeago(ad.CreationTimestamp)<br />
                            Last Refreshed @TT.Web.CustomHtmlHelpers.CharactersHere.DatetimeToTimeago(ad.RefreshTimestamp)
                        </p>

                        <p>
                            @Html.ActionLink("Edit Ad", MVC.Settings.UpdateRPClassifiedAd(ad.Id))<br />
                            @Html.ActionLink("Refresh Ad", MVC.Settings.RefreshRPClassifiedAd(ad.Id))<br />
                            @Html.ActionLink("Delete Ad", MVC.Settings.DeleteRPClassifiedAd(ad.Id), new { onclick = "return confirm('Are you sure you want to delete this RP ad?')" })<br />
                        </p>
                    </div>
                }

            }
        </div>


    }


</div>