@model IEnumerable<TT.Domain.Skills.DTOs.LearnableSkillsDetail>
@using TT.Domain.Models
@using TT.Domain.Statics
@using TT.Web.CustomHtmlHelpers

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back to game", MVC.PvP.Play())</li>
                <li>@Html.ActionLink("Talk", MVC.NPC.TalkToLorekeeper())</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div>
    <p class="infoMessage result">@Html.Raw(ViewBag.Result)</p>
    <p class="infoMessage error">@ViewBag.ErrorMessage</p>
    <p class="infoMessage suberror">@ViewBag.SubErrorMessage</p>
</div>

<div class="containerInner">
    
    <h1>Purchase Training</h1>

    <p>Which spell would you like to learn?  There are currently @Model.Count() spells in this category that you can be taught, each at the price of @TT.Domain.Statics.PvPStatics.LorekeeperSpellPrice Arpeyjis <span title="Arpeyjis" class="icon icon-money"></span> each.</p>

    <p>You have <b>@ViewBag.Money</b> Arpeyjis <span title="Arpeyjis" class="icon icon-money"></span> available for spending.</p><br>

    <ul>
        <li>@Html.ActionLink("Animate spells", MVC.NPC.LorekeeperLearnSpell(PvPStatics.MobilityFull))</li>
        <li>@Html.ActionLink("Inanimate spells", MVC.NPC.LorekeeperLearnSpell(PvPStatics.MobilityInanimate))</li>
        <li>@Html.ActionLink("Pet/Animal spells", MVC.NPC.LorekeeperLearnSpell(PvPStatics.MobilityPet))</li>
        <li>@Html.ActionLink("Other", MVC.NPC.LorekeeperLearnSpell(PvPStatics.MobilityMindControl))</li>
    </ul>

    <hr />
    
    <table id="Spells" class="table table-hover messageTable dt-responsive">
        <thead>
        <tr>
            <th>Spell Name</th>
            <th>Form Name</th>
            <th>Image</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var s in Model.OrderBy(s => s.FriendlyName))
        {
            <tr>
                <td class="playerMediatingNotification"><b>@s.FriendlyName</b></td>
            <td><b>@s.FormSource.FriendlyName</b></td>
                    
                @{
                    if (s.MobilityType == PvPStatics.MobilityFull)
                    {
                        <td><img src="@CharactersHere.GetImageUrl(s.FormSource.PortraitUrl, s.MobilityType, true)" width="100px" height="100px" style="border: 1px solid black;" /></td>
                    }
                    else if (s.MobilityType == PvPStatics.MobilityInanimate || s.MobilityType == PvPStatics.MobilityPet)
                    {
                        <td><img src="@CharactersHere.GetImageUrl(s.FormSource.ItemSource.PortraitUrl, s.MobilityType, true)" width="100px" height="100px" style="border: 1px solid black;" /></td>
                    }
                    else
                    {
                        <td>(no image)</td>
                    }
                }

                <td>@Html.ActionLink("Purchase Training", MVC.NPC.LorekeeperLearnSpellSend(s.dbName))</td>
            </tr>
        }
        </tbody>
    </table>

</div>

<script>
    $('#Spells').dataTable({
        "lengthMenu": [[10, 50, 100, 200, -1], [10, 50, 100, 200, "All"]]
    });
</script>

<style>
    tr {
        border: 1px dashed rgb(161, 105, 105);
        text-align: center;
    }
</style>