                        <li>@Html.ActionLink("My Statistics", "PlayerStats", "Settings", new { id = Model.You.Player.MembershipId }, null)</li>
                        <li>@Html.ActionLink("Self Restore (3 AP, 10 Mana)", "SelfRestore", "PvP")</li>
