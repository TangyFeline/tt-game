<div class="offlinePlayersWrapperBG hidden-xs">
    <div class="row">
        <div class="col-md-1">
            @Html.ActionLink(Model.PlayerItems.Where(i => !i.dbItem.IsEquipped).Count() + "/" + Model.InventoryMaxSize, "MyInventory", "PvP", null, new { @class = "playPageInventoryItem openInventory", @style = "background-image: url(../Images/PvP/Icons/Backpack_Meddle.png)", @title = "View Inventory" })
        </div>
        @{
            foreach (ItemViewModel item in Model.PlayerItems.Where(i => i.dbItem.IsEquipped))
            {
                <div class="col-md-1">
                    <div class="playPageInventoryItem" style="background-image: url(..@CharactersHere.GetImageURL(item, true));" title='@item.Item.FriendlyName'></div>
