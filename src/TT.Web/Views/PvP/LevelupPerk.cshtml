@model IEnumerable<TT.Domain.Models.DbStaticEffect>

@section menu
{
    <li><a href="@Url.Action(MVC.PvP.Play())">Back to game</a></li>
}

<p class="infoMessage result">You have <b>@ViewBag.PerksRemaining</b> unused perks remaining.</p>
<div class="containerInner center-block">

    <p style="margin-bottom: 10px;">
        Your experiences have allowed you to choose a perk that will permanently boost your abilities.  Which perk do you want?<br><br>
    </p>
    <center>
        @{
            foreach (var e in Model)
            {
                <div class="perkBox">
                    <h3>@e.FriendlyName</h3>
                    <p>@e.Description</p>
                    @Html.Partial(MVC.PvP.Views.partial.partial_perkBonus, e.ToStaticEffect())
                    <a href="@Url.Action(MVC.PvP.ChoosePerk(e.Id))">Choose this perk!</a>
                </div>
            }
        }
    </center>
</div>
