@model TT.Domain.ViewModels.NewsPageViewModel
@using TT.Domain.Statics

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action(MVC.PvP.Play())">Back to game</a></li>
                <li><a href="@Url.Action(MVC.Info.GameNews_PlannedFeatures())">Planned Game Features</a></li>
                <li><a href="@Url.Action(MVC.Info.GameNews_Archive())">News Archive</a></li>
                <li><a href="@Url.Action(MVC.Info.Rules())">Rules of Play</a></li>
                <li><a href="@Url.Action(MVC.Info.GearTool())">Equipment Helper</a></li>
                <li><a href="@Url.Action(MVC.Info.ServerPopulation())">Server Population By Turn</a></li>
                @{if (User.IsInRole(PvPStatics.Permissions_Admin))
                    {
                        <li><a href="@Url.Action(MVC.PvPAdmin.ListNewsPosts())">Edit News</a></li>
                    }
                }
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="containerInner listdots">

    Misc Links:  <span class="glyphicon glyphicon-star-empty"></span><a href="https://www.zeemaps.com/map?group=1523025#">Unofficial TT Nuclear Strike Map</a>, <span class="glyphicon glyphicon-star-empty"></span><a href="http://portalz.xyz/newwiki/browse.php">Kevin Portalz's Unofficial TT Wiki</a>, <span class="glyphicon glyphicon-star-empty"></span><a href="@Url.Action(MVC.PvP.LookAtPlayer_FromMembershipId("69"))">Message Judoo</a>



    <h1>Updates, News, and Announcements</h1>
    <h4>We will be posting game updates, news, and a list of <a href="#contributorsTable">community contributors</a> here.</h4>

    @{
        foreach (var n in Model.NewsPosts)
        {

            if (User.IsInRole(PvPStatics.Permissions_Admin))
            {
                <a href="@Url.Action(MVC.PvPAdmin.EditNewsPost(n.Id))" class="bad">[Edit]</a>
            }

            <p>@n.Timestamp.ToString("MMMM d")</p>
            @Html.Raw(n.Text)

            <hr />

        }
    }
    <div style="text-align:center;">
        <h2><a id="contributorsTable">Contributions and Contributors</a></h2>
        <h3>Arist Biographies</h3>

        @{
            foreach (var n in Model.ArtistBios)
            {
                if (!string.IsNullOrEmpty(n.OtherNames))
                {
                    <a href="@Url.Action(MVC.Settings.AuthorArtistBio(n.Owner.Id))">@n.OtherNames</a><br>
                }
                else
                {
                    <a href="@Url.Action(MVC.Settings.AuthorArtistBio(n.Owner.Id))">@n.Owner.UserName</a><br>
                }

            }
        }

        <br />

        <p class="bad">A complete count of all authors and their spell counts can be viewed <a href="@Url.Action(MVC.Contribution.GetContributionTable())">here.</a></p>
        <p>
            If you are interested in contributing new content to the game, click <a href="@Url.Action(MVC.Contribution.Contribute(-1))">here</a>.
        </p>
    </div>
</div>
