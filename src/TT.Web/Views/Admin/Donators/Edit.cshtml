@model TT.Domain.DTOs.Identity.UserDonatorDetail

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back to game", "Play", "PvP")</li>
                <li>@Html.ActionLink("Back", "List", "Donator")</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div>
    <p class="infoMessage result">@Html.Raw(ViewBag.Result)</p>
    <p class="infoMessage error">@ViewBag.ErrorMessage</p>
    <p class="infoMessage suberror">@ViewBag.SubErrorMessage</p>
</div>


<div class="containerInner">

    <h1>Edit Donator</h1>


@using (Html.BeginForm("EditSend", "Donator", FormMethod.Post))
{

    <label>UserId</label>
    @Html.TextBox("UserId", Model.Id)

    <br /><br />

    <label>UserName: </label>
    <b>@Model.UserName</b>

    <br /><br />

    <label>Patreon Name</label>
    @Html.TextBox("PatreonName", Model.Donator.PatreonName)

    <br/><br />

    <label>Tier (1, 2, or 3)</label>
    @Html.TextBox("Tier", Model.Donator.Tier, new { @type = "number", @min = "0", @max = "3" })

    <br/><br />

    <label>Raw Donation Amount</label>
    @Html.TextBox("ActualDonationAmount", Model.Donator.ActualDonationAmount)

    <br/><br />

    <label>Misc Notes</label>
    @Html.TextArea("SpecialNotes", Model.Donator.SpecialNotes)

    <br /><br />

    <input type="submit" value="Save" />
}

</div>