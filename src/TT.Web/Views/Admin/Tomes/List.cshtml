@model IEnumerable<TT.Domain.DTOs.Assets.TomeDetail>
    @using TT.Domain.DTOs.Assets

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back to game", MVC.PvP.Play())</li>
                <li>...</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div>
    <p class="infoMessage result">@Html.Raw(ViewBag.Result)</p>
    <p class="infoMessage error">@ViewBag.ErrorMessage</p>
    <p class="infoMessage suberror">@ViewBag.SubErrorMessage</p>
</div>


<div class="containerInner">
    <h1>Tomes</h1>

    @Html.ActionLink("New Tome", MVC.Tome.Create())
   
    <table id="tomes">
        <thead>
            <tr>
                <td>Id</td>
                <td>Item</td>
                <td>Text</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (TomeDetail t in Model)
                {
                    <tr>
                        <td>@t.Id</td>
                        <td>@t.BaseItem.FriendlyName</td>
                        <td>@t.Text.Substring(0, Math.Min(t.Text.Length, 200))</td>
                        <td>@Html.ActionLink("[Edit]", MVC.Tome.Edit(t.Id))</td>
                        <td>@Html.ActionLink("[Delete]", MVC.Tome.Delete(t.Id), new { onclick = "return confirm('Are you sure you want to delete this?')", @class = "" })]</td>
                    </tr>
                }
            }

          
        </tbody>

       

    </table>

    @Html.ActionLink("New Tome", MVC.Tome.Create())

</div>

<style>
    table, td {
        padding: 5px;
        border: 1px solid black;
    }
</style>

<script>
    $(document).ready(function () {
        $('#tomes').dataTable();
    });
</script>