@model TT.Domain.Models.Covenant

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action(MVC.PvP.Play())">Back to game</a></li>
                <li><a href="@Url.Action(MVC.Covenant.MyCovenant())">Back to My Covenant</a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="infoMessage error">
    @Html.Raw(ViewBag.ValidationMessage)
</div>
<div class="containerInner">
    <h3>Start A New Covenant</h3>
    <p>You are not in a covenant--so why not start your own?</p>
    @using (Html.BeginForm(MVC.Covenant.StartNewCovenantSubmit(), FormMethod.Post))
    {
        <p>Name</p>
        @Html.TextBoxFor(m => m.Name)<br />
        @Html.ValidationMessageFor(m => m.Name)
        <p>A short description of this covenant:</p>
        @Html.TextBoxFor(m => m.SelfDescription)<br />
        @Html.ValidationMessageFor(m => m.SelfDescription)
        <br />
        <input type="submit" value="Save" />
    }
</div>