@model IEnumerable<TT.Domain.Models.CovenantLog>

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back to game", "Play", "PvP")</li>
                <li>@Html.ActionLink("Back to My Covenant", "MyCovenant", "Covenant")</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="containerInner">
    <h3>Covenant Activity</h3>
    <ul>

        @{
            foreach (TT.Domain.Models.CovenantLog l in Model)
            {
                <li>
                    @{
                if (l.IsImportant == true)
                {
                    <span><b>@Html.Raw(l.Message)</b></span>
                }
                else
                {
                    <span>@Html.Raw(l.Message)</span>
                }
                    }

                    <span class="timeago">@TT.Web.CustomHtmlHelpers.CharactersHere.DatetimeToTimeago(l.Timestamp)</span>
                </li>
            }
        }

    </ul>
</div>
