@model TT.Domain.ViewModels.CovenantViewModel

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back to game", MVC.PvP.Play())</li>
                <li>@Html.ActionLink("Back to My Covenant", MVC.Covenant.MyCovenant())</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
<div class="containerInner">
    <h3>Add or Remove a Covenant Captain</h3>
    <p>Click on one of the names below to add a member of the covenant as a captain.  If they are currently a captain, clicking on their name will remove that status.</p>
    <p>Covenant captains are special trusted members of the covenant and are permitted to purchase furniture and gift out covenant funds.</p>
    @{
        foreach (TT.Domain.ViewModels.PlayerFormViewModel p in Model.Members)
        {
            <p>
                @Html.ActionLink(p.Player.GetFullName(), MVC.Covenant.InviteCaptainSend(p.Player.Id))
                @{
            if (ViewBag.CurrentCaptains.Contains(p.Player.Id + ";"))
            {
                <span class="good">Current Captain</span>
            }
                }
            </p>
        }
    }
</div>
