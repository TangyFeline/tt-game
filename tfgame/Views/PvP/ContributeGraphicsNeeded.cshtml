@model IEnumerable<tfgame.dbModels.Models.Contribution>
@using tfgame.dbModels.Models

<head>

    <link href="~/Content/PvP.css" rel="stylesheet" />

</head>

@Html.ActionLink("Back to game", "Play", "PvP")

<div class="result">
    @Html.Raw(ViewBag.Result)
</div>
<div class="error">
    @ViewBag.ErrorMessage
</div>
<div class="suberror">
    @ViewBag.SubErrorMessage
</div>

<h1>Contributions Reviewed but Awaiting Implementation</h1>

<h4>
    On this page are all of the contributions that have been marked as ready but have not yet been added into the game.  This is so artists can see what spells will need graphics in the future.  An administrator will specify which spells have passed review and are ready for graphics, so consider anything that appears here more or less confirmed for the future.  This page will be upgraded in the future so each contribution will list whether an artist has claimed the graphic and has started working on it or has plans in the immediate future to do so.
</h4>

<table style="min-width: 1000px">

    <thead>
    <th>
        Spell Author, Name, and Mobility Type
    </th>

    <th style="width: 300px;">
        Form Description
    </th>
    <th style="width: 300px;">
        Animal/Item Description
    </th>
    <th>
        Graphic by Artist
    </th>
    </thead>

    <tbody>

        @{
            foreach (Contribution c in Model)
            {
                <tr>
                    <td>

                        @{
                if (c.SubmitterUrl != null && c.SubmitterUrl != "")
                {
                    <a href="@c.SubmitterUrl">@c.SubmitterName</a>
                }
                else
                {
                    @c.SubmitterName
                }

                        }
                        <p>
                            <span style="color: darkgreen;">
                                @c.Skill_FriendlyName
                            </span>
                        </p>

                        <p>
                            <span style="color: blue;">@c.Form_MobilityType</span>
                        </p>
                        <p>
                            Form/Item name:
                           <b>@c.Form_FriendlyName</b>
                        </p>
                    </td>
                    <td>
                        @c.Form_Description
                    </td>
                    <td>
                        
                        @c.Item_Description
                    </td>
                    <td>
                        @{

                try
                {
                    @Html.ActionLink(c.AssignedToArtist, "ContributeSetGraphicStatus", "PvP", new { id = c.Id }, null)
                }
                catch
                {
                    @Html.ActionLink("(none)", "ContributeSetGraphicStatus", "PvP", new { id = c.Id }, null)
                }
                        }

                    </td>

                </tr>
            }
        }

    </tbody>

</table>

@Html.ActionLink("Back to game", "Play", "PvP")

<style>
    table {
        padding: 3px;
        border: 1px solid black;
        min-width: 1500px;
    }

    th {
        background-color: black;
        color: white;
        text-align: center;
    }

    tr {
        padding: 3px;
        border: 1px solid black;
    }

    td:nth-child(4) {
        width: 300px;
    }

    td:nth-child(5) {
        width: 300px;
    }

    tr:nth-child(odd) {
        background-color: lightgray;
    }

    td {
        text-align: center;
        border: 1px solid darkblue;
    }
</style>