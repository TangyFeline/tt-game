@model tfgame.dbModels.Models.JewdewfaeEncounter


<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back to game", "Play", "PvP")</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12" style="padding: 20px">
            <img class="img-responsive center-block" src="../Images/PvP/portraits/jewdewfae_Luxianne.png">
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12 textSpaced" style="padding: 20px; text-align: justify;">
            @{
                if (ViewBag.ShowSuccess == false && ViewBag.HadRecentInteraction == false)
                {
                    <p>@Html.Raw(Model.IntroText)</p>

                    if (ViewBag.IsInWrongForm == true)
                    {
                        <p>@Html.Raw(Model.FailureText)</p>
                    }
                    else if (ViewBag.IsTired == true)
                    {
                        <p class="faevoice">"You look too tired to be any fun right now.  Come back later when you're a little more awake, mkay?"</p>
                    }
                    else
                    {
                        <p>@Html.ActionLink("Play with Jewfewfae (5 AP)", "PlayWithJewdewfae", "PvP", new { @class = "inanimateAction center-block" })</p>
                    }
                }
                else if (ViewBag.HadRecentInteraction == true)
                {
                    <p class="faevoice">"Thanks for playing with me!  Maybe we can have some more fun somewhere else later..."</p>
                }
                else
                {
                    <p>@Html.Raw(Model.CorrectFormText)</p>
                    <p style="text-align: center !important"><b><i>You earned @Math.Floor(ViewBag.XPGain) XP from Jewdewfae's magic.</i></b></p>
                }
            }
        </div>
    </div>
</div>





<style>
    .faevoice,fae {
        color: darkviolet;
    }

</style>