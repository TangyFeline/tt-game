@model tfgame.ViewModels.PlayPageViewModel
@using tfgame.CustomHtmlHelpers
@using tfgame.ViewModels
@using tfgame.Statics
@using tfgame.Procedures

<table class="tableLines">
    <tr>
        <td class="mapEmpty"></td>
        <td class="mapField">
            @*NORTH*@

            @{
                if (Model.Location.Name_North != null)
                {
                    if (Model.You.Player.Mobility == "full")
                    {
                        @Html.ActionLink(Model.Location.FriendlyName_North, "MoveTo", "PvP", new { locname = Model.Location.Name_North }, null)
                    }
                    else if (Model.You.Player.Mobility == "animal" && Model.You.Player.IsPetToId == -1)
                    {
                        @Html.ActionLink(Model.Location.FriendlyName_North, "MoveTo", "PvP", new { locname = Model.Location.Name_North }, null)
                    }
                    else if (Model.You.Player.Mobility == "animal" && Model.You.Player.IsPetToId != -1)
                    {
                        <span>@Model.Location.FriendlyName_North</span>
                    }
                }
            }

        </td>
        <td class ="mapEmpty"></tdclass>
    </tr>
