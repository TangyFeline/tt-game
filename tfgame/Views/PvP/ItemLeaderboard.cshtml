@model IEnumerable<tfgame.ViewModels.SimpleItemLeaderboardViewModel>
@using tfgame.dbModels.Models
@using tfgame.Statics
@using tfgame.CustomHtmlHelpers
@using tfgame.ViewModels

<nav class="navbar navbar-default outsideContainer navbarTT2">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Back to game", "Play", "PvP")</li>
                <li>@Html.ActionLink("View Dungeon Leaderboard", "PvPLeaderboard", "PvP")</li>
                <li>@Html.ActionLink("View XP Leaderboard", "Leaderboard", "PvP")</li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="specialBox">
    <b>Item Leaderboard -- @PvPStatics.AlphaRound</b><br />
    These are the most powerful once-human items and pets in the town.  Some may be able to revert their old human forms but many have embraced their new existence as personal pets and belongings.  Treat them kindly should you come to posses them!  <i>Note:  this leaderboard will only update once in ten minutes.</i>
</div>

<div class="containerInner">
    <table>

        <thead>
            <tr>
                <th style="width:15px">#</th>
                <th class="leaderBoardName">Human Name</th>
                <th class="leaderBoardForm mobile">Item Type</th>
                <th>Lvl</th>
                <th>Exp</th>
            </tr>
        </thead>
        <tbody>

            @{
                int rank = 1;
            }

            @foreach (SimpleItemLeaderboardViewModel p in Model)
            {
                <tr>
                    <td>
                        @rank
                    </td>
                    <td>
                        @CharactersHere.PrintPermanencyIcon(p.Item)
                        @Html.ActionLink(p.Item.GetFullName(), "LookAtPlayerItem", "PvP", new { vicname = p.Item.VictimName }, null)
                        @CharactersHere.PrintGenderIcon(p.Gender)
                        @CharactersHere.PrintItemTypeIcon(p.StaticItem)                        
                    </td>
                    <td class="mobile">
                        @p.StaticItem.FriendlyName
                    </td>
                    <td>
                        @p.Item.Level
                    </td>
                    <td>@p.ItemXP</td>
                </tr>
                rank++;
            }
        </tbody>
    </table>
</div>
    <style>
        .leaderBoardName {
            width: auto;
        }

        .leaderBoardCovenant {
            width: 20%;
        }

        .leaderBoardForm {
            width: 30%;
        }

        table {
            padding: 3px;
            border: 1px solid black;
            width: 100%;
        }

        th {
            background-color: black;
            color: white;
            text-align: center;
            padding: 0px;
        }

        tr {
            padding: 3px;
            border: 1px solid black;
        }

            tr:nth-child(odd) {
                background-color: lightgray;
            }

        td {
            text-align: center;
            padding: 2px 0px 2px 0px;
        }

        .dark {
            background-color: #CCCCCC;
        }

        tr.dark:nth-child(odd) {
            background-color: #B8B8B8;
        }

        .mobile {
        }

        @@media screen and (max-width: 767px) {
            .mobile {
                display: none;
            }
        }
    </style>

