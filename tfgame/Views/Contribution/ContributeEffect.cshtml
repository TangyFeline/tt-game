                    <span class="bad">N</span>
                }
                </td>
                @if (contribution.ProofreadingLockIsOn == true)
                {
                    <td><span class="bad">@contribution.CheckedOutBy</span></td><td>@contribution.Timestamp.ToString("u")</td>
                }
                else
