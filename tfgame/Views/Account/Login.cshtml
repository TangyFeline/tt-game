<script>
    $(document).ready(function () {
       //toggleForms(true);
        $("#consent").click(function () {
            if ((this).checked) {
                toggleForms(false);
            } else {
                toggleForms(true);
            }
        });
    });

    function toggleForms(value) {
        $("#UserName").prop("disabled", value);
        $("#Password").prop("disabled", value);
        $("#submitBtn").prop("disabled", value);
        $("#RememberMe").prop("disabled", value);
    }

</script>

