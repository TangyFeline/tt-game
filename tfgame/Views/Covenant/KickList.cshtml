@model tfgame.ViewModels.CovenantViewModel
           @using tfgame.dbModels.Models
            @using tfgame.ViewModels
<head>
    <link href="~/Content/PvP.css" rel="stylesheet" />
</head>

<p>
    @Html.ActionLink("Back to My Covenant", "MyCovenant", "Covenant")
    @Html.ActionLink("Back to game", "Play", "PvP")
</p>

<h1>Kick Out a Covenant Member</h1>

<p>You can eject a member of your covenant forcibly on this page.</p>



@{
    foreach (PlayerFormViewModel p in Model.Members)
    {
        <hr />
        <p>
            @Html.ActionLink(p.Player.FirstName + " " + p.Player.LastName, "KickMember", "Covenant", new { id = p.Player.Id }, null)
        </p>
    <hr />
    }
}

<p>
    @Html.ActionLink("Back to My Covenant", "MyCovenant", "Covenant")
    @Html.ActionLink("Back to game", "Play", "PvP")
</p>