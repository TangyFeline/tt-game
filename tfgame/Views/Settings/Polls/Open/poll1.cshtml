@model tfgame.dbModels.Models.PollEntry

<head>
    <script src="~/Scripts/jquery-2.1.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <link href="~/Content/PvP.css" rel="stylesheet" />
</head>

<p>@Html.ActionLink("Back to game", "Play", "PvP")</p>

<p class="error">@ViewBag.Error</p>

<h1>What features would you like to see added the most?</h1>

<p>You can return to edit your answers later.  Text inputs have a maximum of 500 characters.</p>

@using (Html.BeginForm("ReplyToPoll", "Settings", Model))
{
    
    <p>What game mechanic would you like to see added first?  (First preference)</p>
      @Html.DropDownListFor(i => i.Num1, new SelectList(
                  new List<Object>{
                      new { value = "0"  , text = "---please select a choice---"  },
