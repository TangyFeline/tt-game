                       new { value = "6"  , text = "Mind-control type transformation"  },
                       new { value = "7"  , text = "Absorption type transformation"  },

                    },
                  "value",
                  "text",
                   2))
    
    <hr />
    
    <p>What game mechanic would you like to see added first?  (Third preference).  Please do not duplicate either answer selected above.</p>
      @Html.DropDownListFor(i => i.Num3, new SelectList(
                  new List<Object>{
                      new { value = "0"  , text = "---please select a choice---"  },
                       new { value = "1"  , text = "Questing system"  },
                       new { value = "2"  , text = "More RP game mechanics"  },
                       new { value = "3"  , text = "More PvP game mechanics--covenant wars, etc"  },
